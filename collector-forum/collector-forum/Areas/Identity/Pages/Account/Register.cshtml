@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h2 class="text-center">Create a new account</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Input.UserName" class="form-control" id="reg" placeholder="User Name" />
        <span asp-validation-for="Input.UserName" class="text-danger err"></span>
    </div>
    <div class="form-group">
        <input asp-for="Input.FirstName" class="form-control" id="reg" placeholder="First Name" />
        <span asp-validation-for="Input.FirstName" class="text-danger err"></span>
    </div>
    <div class="form-group">
        <input asp-for="Input.LastName" class="form-control" id="reg" placeholder="Last Name" />
        <span asp-validation-for="Input.LastName" class="text-danger err"></span>
    </div>
    <div class="form-group">
        <input asp-for="Input.DOB" class="form-control" id="reg" />
        <span asp-validation-for="Input.DOB" class="text-danger err"></span>
    </div>
    <div class="form-group">
        <input asp-for="Input.Email" class="form-control" id="reg" placeholder="Email" />
        <span asp-validation-for="Input.Email" class="text-danger err"></span>
    </div>
    <div class="form-group">
        <input asp-for="Input.Password" class="form-control" id="reg" placeholder="Password" />
        <span asp-validation-for="Input.Password" class="text-danger err"></span>
    </div>
    <div class="form-group">
        <input asp-for="Input.ConfirmPassword" class="form-control" id="reg" placeholder="Confirm Password" />
        <span asp-validation-for="Input.ConfirmPassword"  class="text-danger err"></span>
    </div>
    <button type="submit" class="btn btn-primary" id="regbutt">Register</button>
    <p><a id="tologin" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account?</a></p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
