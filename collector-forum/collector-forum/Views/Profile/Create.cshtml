@model collector_forum.Models.Items.NewItemModel

@{
    ViewData["Title"] = "Add Item";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading noBorder">
            Add New Item
            <span id="headingBtn">
                <a asp-controller="Profile" asp-action="Detail" asp-route-id="@Model.UserId"
                   class="btn btn-back">
                    Back to @Model.UserName profile
                </a>
            </span>
        </div>
    </div>
    <div class="row createPost">
        <div class="createPostSection">
            <form asp-action="AddItem" method="post" id="addPostForm">
                <div class="form-group">
                    <label asp-for="ItemName">Item Name</label>
                    <input asp-for="ItemName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ItemDescription">Item Description</label>
                    <textarea asp-for="ItemDescription" class="form-control" rows="5" cols="10" id="txt">Provide the most important information about the item</textarea>
                </div>
                <button type="submit" id="submitPostBtn" class="btn btn-submitPost">
                    Add Item
                </button>
            </form>
        </div>
    </div>
</div>