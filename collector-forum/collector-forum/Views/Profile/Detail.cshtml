@using Microsoft.AspNetCore.Identity
@model collector_forum.Models.ApplicationUser.ProfileModel

@inject UserManager<collector_forum.Data.Models.ApplicationUser> UserManager

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            @Model.UserName profile
        </div>
    </div>
    <div class="row userProfile">
        <div class="col-md">
            <div class="profileHead">
                <span id="userName">@Model.UserName</span>
                @if (@Model.IsAdmin)
                {
                    <span class="isAdmin">Admin</span>
                }
                @if (@Model.IsMod)
                {
                    <span class="isMod">Mod</span>
                }
            </div>
            <span id="userRating">Current Rating: @Model.UserRating</span>
            <span id="userEmailLabel">Email: @Model.Email</span>
            <span id="userCreatedLabel">Member Since: @Model.MemberSince</span>
            <a id="userItems" asp-controller="Profile" asp-action="Index" asp-route-id="@Model.UserId">List of items</a>
        </div>
    </div>
</div>