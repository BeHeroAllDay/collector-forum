@model collector_forum.Models.Search.SearchResultModel

@{
    ViewData["Title"] = "Results";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            <span>Search Results for: @Model.SearchQuery</span>
            <form asp-controller="Search" asp-action="Search" method="post">
                <div class="searchForm">
                    <input asp-for="SearchQuery" type="text" placeholder="Search..." class="searchBar" onfocus="clearThis(this)" />
                    <button type="submit" class="btn btn-forumSearch">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="row categoriesIndexContent">
        @if (Model.Posts.Any())
        {
            <table class="table table-hover" id="searchIndexTable">
                <tbody>
                    @foreach (var post in Model.Posts)
                    {
                        <tr>
                            <td>
                                <div class="forumLogo" style="background-image: url(@post.Category.ImageUrl);"></div>
                                <div class="postData">
                                    <div class="postTitle">
                                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Title">@post.Title</a>
                                    </div>
                                    <div class="postSubTitle">
                                        <div>
                                            by:
                                            <span class="postAuthor">
                                                <a asp-controller="Profile" asp-action="Detail" asp-route-id="@post.AuthorId">
                                                    @post.AuthorName
                                                </a>
                                            </span>
                                            <span class="postAuthorRating">
                                                (@post.AuthorRating)
                                            </span>
                                            in:
                                            <span class="postForum">
                                                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@post.Category.Id">
                                                    @post.Category.Name
                                                </a>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="categoryPostCount">
                                    Replies: @post.RepliesCount
                                </div>
                            </td>
                            <td>
                                <div class="postDate">@post.DatePosted</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else if (Model.EmptySearchResults)
        {
            <div class="noPosts">
                <i class="fas fa-comments"></i>
                <h3>
                    No search results found for "@Model.SearchQuery" <br />
                </h3>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function clearThis(target) {
            target.value = "";
        }
    </script>
}