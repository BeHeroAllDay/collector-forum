@model collector_forum.Models.Category.AddCategoryModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Create New Category
        </div>
    </div>
    <div class="row">
        <div id="createCategorySection">
            <form asp-action="AddCategory" method="post" id="createCategoryForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Category Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Choose category title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Category Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Write a brief description of the category topic" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button type="submit" id="newCategoryBtn" class="btn btn-submitPost">Create Category</button>
            </form>
        </div>
    </div>
</div>