@model collector_forum.Models.Category.CategoryTopicModel

@{
    ViewData["Title"] = Model.Category.Name;
}

<h1>Category - @Model.Category.Name!</h1>

<span id="headingBtn">
    <a asp-controller="Post"
       asp-action="Create"
       asp-route-id="@Model.Category.Id" class="btn btn-success">
        Create new post
    </a>
</span>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                            @post.Title
                        </a>
                    </td>
                    <td>
                        @post.AuthorName
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <h3>
            It looks like there are no @Model.Category.Name posts yet. <br />
            Why not
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Category.Id">
                <span>create</span>
            </a>
            one?
        </h3>
    </div>
}