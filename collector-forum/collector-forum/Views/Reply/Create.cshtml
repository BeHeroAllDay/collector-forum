@model collector_forum.Models.Reply.PostReplyModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Reply | @Model.PostTitle

            <div class="forumLogo" style="background-image: url(@Model.CategoryImageUrl);"></div>
            <span id="headingBtn">
                <a asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId" class="btn btn-back">
                    Back to Post
                </a>
            </span>
        </div>
    </div>
    <div class="row replyBg">
        <div id="postReply">
            <h3>
                @Model.PostTitle
            </h3>
            <p>
                @Html.Raw(Model.PostContent)
            </p>
        </div>
    </div>
    <div class="row replyBg">
        <div id="createReply">
            <div class="authorBlock">
                Please, think ten times before You add this reply =)
            </div>

            <form asp-action="AddReply" method="post" id="addReplyForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label id="replyLabel" asp-for="ReplyContent">Reply: </label>
                    <textarea asp-for="ReplyContent" rows="5" cols="10" id="txt" class="form-control"></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit" id="submitReplyBtn" class="btn btn-submitPost">Submit Reply</button>
                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="CategoryId" type="hidden" />
                <input asp-for="CategoryName" type="hidden" />
            </form>
        </div>
    </div>
</div>