@model collector_forum.Data.Models.PostReply

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading noBorder">
            Edit reply | @Model.Post.Id
            <span id="headingBtn">
                <a asp-action="Manage" asp-route-replyId="@Model.Post.Id" class="btn btn-back">
                    Back to Management
                </a>
            </span>
        </div>
    </div>
    <div class="row createPost">
        <div class="createPostSection">
            <div class="authorBlock">
                You're editing this post as <strong>@Model.User.UserName</strong>
            </div>
            <form asp-action="Edit" method="post" id="addPostForm">

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Created" />
                <input type="hidden" asp-for="Updated" value="@DateTime.Now" />

                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                </div>
                <button type="submit" id="submitPostBtn" class="btn btn-submitPost">
                    Update Reply
                </button>
            </form>
        </div>
    </div>
</div>